{% extends "base.html.twig" %}

{% block scripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            $("#gallery").nanoGallery({
                'thumbnailHeight': 300,
                'thumbnailWidth': 'auto',
                'thumbnailGutterWidth': 1,
                'thumbnailGutterHeight': 1,
                'thumbnailLabel': {
                    'display': false,
                    'hideIcons': true
                }
            });
        });
    </script>
{% endblock %}

{% block content %}
    <h1>{{ album.name }}</h1>
    <div id="gallery">
    {% for image in album.images %}
        <a href="{{ url('thumbnail', { albumId: album.id, i: image, s: 'large'}) }}"
           data-ngthumb="{{ url('thumbnail', { albumId: album.id, i: image, s: 'small'}) }}"></a>
    {% endfor %}
    </div>
{% endblock %}