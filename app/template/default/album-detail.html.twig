{% extends "base.html.twig" %}

{% block scripts %}
    <script type="text/javascript">
        $(document).ready(function() {
            $("#gallery").nanoGallery();
        });
    </script>
{% endblock %}

{% block content %}
    <h1>{{ album.name }}</h1>
    <div id="gallery">
    {% for image in album.imagesDetail %}
        <a href="{{ url('thumbnail', { albumId: album.id, i: image.name, s: 'large'}) }}"
           data-ngthumb="{{ url('thumbnail', { albumId: album.id, i: image.name, s: 'small'}) }}"
           data-ngdesc="Super 1" >Totoa</a>
    {% endfor %}
    </div>
{% endblock %}